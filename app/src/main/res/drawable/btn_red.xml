<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="#a81d2e" />
                <stroke
                    android:width="1dp"
                    android:color="#a81d2e" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#a81d2e"
                    android:endColor="#a81d2e"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="#a81d2e" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>


</selector>